<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0B8C36" />

            <size
                android:width="60dp"
                android:height="60dp" />

            <corners android:radius="18dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#0EAF44" />

            <size
                android:width="60dp"
                android:height="60dp" />

            <corners android:radius="18dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0C9B3C" />

            <size
                android:width="60dp"
                android:height="60dp" />

            <corners android:radius="18dp" />
        </shape>
    </item>

</selector>